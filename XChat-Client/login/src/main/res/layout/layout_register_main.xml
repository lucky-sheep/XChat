<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginFragment">

    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="20dp"
            android:text="用户注册"
            android:textSize="20sp"
            android:textColor="#A40E1233"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_email_et_til"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            android:hint="邮箱 (用于找回密码)"
            app:endIconMode="clear_text"

            app:errorIconDrawable="@drawable/icon_login_error_input_tips"
            app:errorEnabled="true"
            app:errorIconTintMode="src_in"
            app:errorTextColor="@color/red"
            app:errorTextAppearance="@style/MyErrorText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterMaxLength="30"
            app:counterEnabled="true"
            app:hintTextColor="@color/grayness_200">
            <EditText
                android:id="@+id/login_email_et"
                tools:text="@string/app_name"
                android:drawableStart="@drawable/icon_login_email"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_username_et_til"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            android:hint="用户名"
            app:endIconMode="clear_text"

            app:errorIconDrawable="@drawable/icon_login_error_input_tips"
            app:errorEnabled="true"
            app:errorIconTintMode="src_in"
            app:errorTextColor="@color/red"
            app:errorTextAppearance="@style/MyErrorText"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterMaxLength="15"
            app:counterEnabled="true"
            app:hintTextColor="@color/grayness_200">
            <EditText
                android:id="@+id/login_username_et"
                tools:text="@string/app_name"
                android:drawableStart="@drawable/icon_login_username"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login_password_et_til"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            android:hint="密钥"
            app:endIconMode="password_toggle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/grayness_200">
            <EditText
                android:id="@+id/login_password_et"
                tools:text="@string/app_name"
                android:drawableStart="@drawable/icon_login_password"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_register_btn"
            android:text="注册新账号"
            android:layout_marginTop="30dp"
            app:backgroundTint="#5C6BC0"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            app:strokeColor="@color/grayness_700"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/login_goto_login_btn"
            android:text="已有账号？去登录 >"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>