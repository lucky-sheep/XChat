<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:visibility="gone"
        android:id="@id/msg_item_my_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="gone"
            android:id="@id/msg_item_datetime_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_horizontal"
            tools:text="2022:02:12 19:58"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/msg_item_layout_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/msg_item_datetime_tv"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="horizontal">


            <!-- msg view 不要气泡，垃圾-->
           <RelativeLayout
                android:padding="12dp"
                android:background="@drawable/bg_base_text_msg"
                android:id="@id/msg_item_msg_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp">
<!--                &lt;!&ndash; 通过添加View的方式来完成 &ndash;&gt;-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="@string/app_name" />-->
            </RelativeLayout>

            <!-- avatar -->
            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@id/msg_item_avatar_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_header" />
        </LinearLayout>

        <TextView
            android:id="@id/msg_item_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/msg_item_layout_ll"
            android:layout_alignStart="@id/msg_item_layout_ll"
            android:text="@string/sign_state_text"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@id/msg_item_friend_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/msg_item_datetime_tv"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            tools:text="2022:02:12 19:58"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:id="@id/msg_item_layout_ll"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/msg_item_datetime_tv"
            android:gravity="start"
            android:orientation="horizontal">

            <!-- avatar -->
            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@id/msg_item_avatar_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_header" />
            <!-- msg view -->
            <RelativeLayout
                android:id="@id/msg_item_msg_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp">
                <!-- 通过添加View的方式来完成 -->
<!--                <TextView-->
<!--                    android:text="@string/app_name"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@id/msg_item_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/msg_item_layout_ll"
            android:layout_alignEnd="@id/msg_item_layout_ll"
            android:text="@string/sign_state_text"
            android:textSize="12sp" />
    </RelativeLayout>
</FrameLayout>