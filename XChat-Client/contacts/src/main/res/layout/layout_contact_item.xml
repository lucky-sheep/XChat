<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/contact_item_header_iv"
            android:padding="6dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:aiv_BoarderWidth="0dp"
            app:aiv_ShowBoarder="false"
            app:aiv_BoarderColor="@color/black"
            app:aiv_TextSizeRatio="0.4"/>

        <TextView
            android:id="@+id/contact_item_nickname_tv"
            android:textSize="16sp"
            android:text="zhangsan"
            android:layout_marginStart="15dp"
            android:textColor="#B7000000"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="#0C000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
</LinearLayout>