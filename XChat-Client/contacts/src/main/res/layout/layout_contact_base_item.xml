<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/contact_item_header_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="6dp"
            app:aiv_BoarderColor="@color/black"
            app:aiv_BoarderWidth="0dp"
            app:aiv_ShowBoarder="false"
            app:aiv_TextSizeRatio="0.4" />

        <TextView
            android:id="@+id/contact_item_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/contact_item_header_iv"
            tools:text="username"
            android:textColor="#9C000000"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

<!--            <ImageView-->
<!--                android:id="@+id/contact_item_refuse_btn"-->
<!--                android:src="@drawable/icon_contacts_refuse_request"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->

<!--            <ImageView-->
<!--                android:id="@+id/contact_item_apply_btn"-->
<!--                android:src="@drawable/icon_contacts_agree_request"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->
                    <TextView
                        android:text="拒绝"
                        android:id="@+id/contact_item_refuse_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="通过"
                        android:textSize="17sp"
                        android:layout_marginStart="18dp"
                        android:id="@+id/contact_item_apply_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/contact_item_opt_result_tv"
                android:visibility="visible"
                android:text="对方已经拒绝"
                android:textSize="13sp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="#0C000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
</LinearLayout>